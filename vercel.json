{
  "version": 2,
  "functions": {
    "api/**/*.py": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "builds": [
    { 
      "src": "api/predict.py", 
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    { 
      "src": "api/metrics.py", 
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    { "src": "**/*.html", "use": "@vercel/static" },
    { "src": "assets/**", "use": "@vercel/static" },
    { "src": "**/*.json", "use": "@vercel/static" },
    { "src": "**/*.joblib", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/predict", "dest": "api/predict.py" },
    { "src": "/api/metrics", "dest": "api/metrics.py" },
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/metrics_precomputed.json", "dest": "/metrics_precomputed.json" },
    { "src": "/(index|transaction).html", "dest": "/$1.html" },
    { "src": "/", "dest": "/index.html" }
  ]
}
